{% extends 'base.html.twig' %}

{% block title %}Votre panier!
{% endblock %}

{% block body %}
  <div class="container">
  <div class="bg-light p-3">
    <h1>Votre panier</h1>
  </div>
  {% for message in app.flashes('delete_product') %}
    <div class="alert alert-success">
      {{ message }}
    </div>
  {% endfor %}
  {% if items | length > 0 %}
    <table class="table">
      <thead>
      <tr>
        <th>Produit</th>
        <th>Prix</th>
        <th>Quantit√©</th>
        <th>Total</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      {% for item in items %}
        <tr>
          <td>{{item.product.libelle}}</td>
          <td>{{item.product.price}}</td>
          <td>{{item.quantity}}</td>
          <td>{{item.product.price * item.quantity}}</td>
          <td>
            <a href="{{path('cart_remove',{'id':item.product.id})}}" class="btn btn-danger btn-sm">
              <i class="fas fa-trash">Enlever ce produit</i>
            </a>
          </td>
        </tr>
      {% endfor %}
      </tbody>
      <tfoot>
      <tr>
          <td></td>
          <td colspan ="3" class="text-right">Nombre de produits :</td>
          <td>{{ Cquantity }}</td>
        <td colspan ="3" class="text-right">Total :</td>
        <td>{{total}}</td>
        <td></td>
      </tfoot>
    </table>
  {% else %}
    <p>Surprise, c'est vide !</p>
  {% endif %}
  </div>
  {% endblock %}