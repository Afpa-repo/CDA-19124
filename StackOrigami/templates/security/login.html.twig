{% extends 'base.html.twig' %}

{% block body %}

    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <input class="form-control" require name="_username" type="text" placeholder="Email">
        </div>
        <div class="form-group">
            <input class="form-control" require name="_password" type="password" placeholder="Mot de passe">
        </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Connexion</button>
    </div>

    </form>

{% endblock %}