{% extends 'base.html.twig' %}

{% block title %}Contactez nous{% endblock %}

{% block body %}   
    <div class="container text-center">


        <h1>Contactez-nous</h1>
        {{ form_start(form) }}
        {{ form_label(form.mail, null, { 'label': 'Your name'}) }}
        {{ form_row(form.mail, {'attr': {'placeholder' : "Email", 'class' : "form-control", 'label' : "Email"}}) }}

        {{ form_row(form.subject, {'attr': {'placeholder' : "Sujet", 'class' : "form-control"}}) }}
        {{ form_row(form.message, {'attr': {'placeholder' : "Contenu du message", 'class' : "form-control"}}) }}
        {{ form_row(form.date_send)}}

        <button type="submit" class="myButton mt-2 mb-4">
            Envoyer le ticket
        </button>
        {{ form_end(form) }}
    </div>
{% endblock %}
