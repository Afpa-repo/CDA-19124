{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Modification du profil{% endblock %}


{% block body %}
    {% if app.user %}
        {% if app.user == user %}
            <div class="container text-center">
                <h1>Modification du profil</h1>

                {{ include('users/_form.html.twig', {'button_label': 'Enregistrer'}) }}

                <a href="{{ path('profil') }}">Retour</a>
                -
                <a href="{{ path('users_ChangePassword', {'id': app.user.id}) }}">Modifier mot de passe</a>
                {{ include('users/_delete_form.html.twig') }}
            </div>
        {% else %}
            <p> Vous n'être pas autorisé à acceder à cette page</p>
        {% endif %}
    {% else %}
        <p>Veuillez vous connecter pour acceder à cette page</p>
    {% endif %}
{% endblock %}

