{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Modification du profil{% endblock %}

{% block body %}
    {% if app.user.role == 1 %}
        <div class="container text-center">
            <h1>Modification du profil</h1>

            {{ include('users/_form.html.twig', {'button_label': 'Enregistrer'}) }}

            <a href="{{ path('profil') }}">Retour</a>
            -
            <a href="{{ path('users_ChangePassword', {'id': app.user.id}) }}">Modifier mot de passe</a>
            {{ include('users/_delete_form.html.twig') }}
        </div>
    {% else %}
    <p>Vous n'êtes pas autorisé à accéder à cette page !</p>
    {% endif %}
{% endblock %}
